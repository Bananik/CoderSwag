<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.MainActivity" tools:layout_editor_absoluteY="25dp">

    <TextView
            android:layout_width="126dp"
            android:layout_height="35dp"
            android:text="Kategorie"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp" android:textSize="24sp"
            android:textAlignment="center" android:id="@+id/textView"/>
    <ListView
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp" android:id="@+id/categoryListView"/>

</android.support.constraint.ConstraintLayout>